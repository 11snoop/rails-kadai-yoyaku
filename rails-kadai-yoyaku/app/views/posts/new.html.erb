<div class="new-room">
  <%= link_to "基本情報", :new_post, class: 'new-room-information' %>

  <div class="new-room-register">
    <h3>ルーム情報登録</h3>

    <%= form_with model: @post do |f| %>
      <table>
        <tr>
          <th><%= f.label :room_name ,"ルーム名", class: 'new-room-label' %><span class="mandatory">必須</span></th>
          <td><%= f.text_field :room_name, placeholder: "ルーム名を入力" %></td>
        </tr>

        <tr>
          <th><%= f.label :room_introduction ,"ルーム紹介", class: 'new-room-label' %><span class="mandatory">必須</span></th>
          <td><%= f.text_area :room_introduction, placeholder: "ルーム説明を入力" %></td>
        </tr>

        <tr>
          <th><%= f.label :room_price ,"料金", class: 'new-room-label' %><span class="mandatory">必須</span></th>
          <td><%= f.number_field :room_price, placeholder: "一日あたりの料金を入力", min: 0 %></td>
        </tr>

        <tr>
          <th><%= f.label :room_address ,"住所", class: 'new-room-label' %><span class="mandatory">必須</span></th>
          <td><%= f.text_field :room_address, placeholder: "住所を入力" %></td>
        </tr>

        <tr>
          <th><%= f.label :room_image ,"ルーム画像", class: 'new-room-label' %><span class="mandatory">必須</span></th>
          <td><%= f.file_field :room_image %></td>
        </tr>
      </table>

      <div>
        <ul>
          <li><%= f.submit "登録", class: 'new-room-actions-button' %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
