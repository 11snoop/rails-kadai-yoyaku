<div class="contents row">

  <%= render "devise/shared/error_messages", resource: @user %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <h4>ログイン</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= flash[:alert]%>

    <div class="field">
      <%= f.label :必須, class: 'mandatory' %>
      <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :必須, class: 'mandatory' %>
      <%= f.password_field :password, placeholder: "パスワード", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.label :自動ログインを有効にする %><br />
        <%= f.check_box :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: 'actions-button' %>
    </div>

  <% end %>

  <%= link_to "新規登録", new_user_registration_path, class: 'new-link' %>

</div>
