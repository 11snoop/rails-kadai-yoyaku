<div class="contents row">

  <h2>新しいアカウントを作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
        <%= f.label :必須, class: 'mandatory' %>
        <%= f.text_field :name, placeholder: "ユーザー名", autofocus: true, maxlength: "8" %>
    </div>

    <div class="field">
      <%= f.label :必須, class: 'mandatory' %>
      <%= f.email_field :email, placeholder: "メールアドレス" %>
    </div>

    <div class="field">
      <%= f.label :必須, class: 'mandatory' %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, placeholder: "パスワード", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :必須, class: 'mandatory' %>
      <%= f.password_field :password_confirmation, placeholder: "パスワード確認", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成", class: 'actions-new' %>
    </div>

  <% end %>

  <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path, class: 'new-link' %>

</div>
